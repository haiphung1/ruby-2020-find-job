<div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
  <div class="card bg-light">
    <div class="card-header text-muted border-bottom-0">
      <%= profile.title %>
    </div>
    <div class="card-body pt-0">
      <div class="row">
        <div class="col-7">
          <h2 class="lead"><b><%= profile.user_username %></b></h2>
          <p class="text-muted text-sm"><b>
            <%= t "admin.post.skill" %>: <%= render partial: "profile_skill", collection: profile.profile_skills %></b>
          </p>
          <ul class="ml-4 mb-0 fa-ul text-muted">
            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> <%= t "admin.post.address" %>: <%= profile.address %></li>
            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> <%= t "admin.profile.phone" %>: <%= profile.phone %></li>
          </ul>
        </div>
        <div class="col-5 text-center">
          <%= image_tag(profile.avatar, class: "img-circle img-fluid") if  profile.avatar.present? %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <div class="text-right">
        <%= link_to admin_profile_path(profile), class: "btn btn-sm btn-primary" do %>
          <i class="fas fa-user"></i> <%= t "admin.profile.detail" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
