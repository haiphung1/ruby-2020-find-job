<tr>
  <td><%= user_apply_counter + Settings.index %></td>
  <td><%= user_apply.post_title %></td>
  <td><%= user_apply.post.start_date %></td>
  <td><%= user_apply.post.end_date %></td>
  <td><%= user_apply.user_username %></td>
  <td>
    <span class="badge badge-<%= get_span_class user_apply %>">
      <%= t "status.#{user_apply.status}" %>
    </span>
  </td>
  <td>
    <%= link_to admin_profile_path(user_apply.profile_id), class: "btn btn-info btn-sm" do %>
      <i class="fas fa-eye"></i>
    <% end %>
    <% if user_apply.pending? %>
      <%= link_to [:admin, user_apply], method: :patch, class: "btn btn-primary btn-sm",
        data: {toggle: "tooltip", placement: "right", confirm: "Bạn có chắc chắn muốn thực hiện hành động này?"},
        title: "Phê duyệt" do %>
        <i class="fas fa-check"></i>
      <% end %>
      <%= link_to [:admin, user_apply], method: :delete, class: "btn btn-danger btn-sm",
        data: {toggle: "tooltip", placement: "right", confirm: "Bạn có chắc chắn muốn thực hiện hành động này?"},
        title: "Hủy bỏ" do %>
        <i class="fas fa-times"></i>
      <% end %>
    <% end %>
  </td>
</tr>
